# Cache control for the main HTML file - prevent caching
/index.html
  Cache-Control: no-cache, no-store, must-revalidate
  Pragma: no-cache
  Expires: 0

# Service worker should never be cached
/service-worker.js
  Cache-Control: no-cache, no-store, must-revalidate
  Pragma: no-cache
  Expires: 0

# Workbox service worker files
/sw.js
  Cache-Control: no-cache, no-store, must-revalidate
  Pragma: no-cache
  Expires: 0

/workbox-*.js
  Cache-Control: no-cache, no-store, must-revalidate
  Pragma: no-cache
  Expires: 0

# Manifest file should have short cache
/manifest.webmanifest
  Cache-Control: public, max-age=300

# Static assets can be cached longer with versioning
/assets/*
  Cache-Control: public, max-age=31536000, immutable

# Logo files can be cached
/logo-*.png
  Cache-Control: public, max-age=86400

# All other files - default caching
/*
  Cache-Control: public, max-age=3600